{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Black",
            "command": "black",
            "type": "shell",
            "args": [
                "excludarr",
                "-l",
                "100"
            ],
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "Rebuild environment",
            "command": "pip",
            "type": "process",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "args": [
                "install",
                "."
            ],
            "group": "build"
        },
        {
            "label": "PreRun Task",
            "dependsOn": [
                "Black",
                "Rebuild environment"
            ]
        }
    ]
}